@model Infraestructure.Models.Orden

@{
    ViewBag.Title = "Detalle Orden";
}


<div>
    <h4>Orden</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FechaOrden)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaOrden)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>

        <dd>
            @{
                var nombreCompleto = Model.Cliente.Nombre + " " + Model.Cliente.Apellido1 + " " + Model.Cliente.Apellido2;
            }
            @Html.DisplayFor(model => nombreCompleto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>

        <dd>
           
            @Html.DisplayFor(model => model.Usuario.Email)
        </dd>

    </dl>
    <hr />
    <h4>Detalle Orden</h4>
    <table class="table table-hover">
        <tr>
            <th>
                Libro
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Precio
            </th>

        </tr>

        @foreach (var item in Model.OrdenDetalle)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Libro.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    &cent;@Html.DisplayFor(modelItem => item.Precio)
                </td>

            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Regresar al listado", "Index")
</p>

